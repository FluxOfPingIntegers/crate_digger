<% if !logged_in? %>
  <div class="form">
  <%= form_tag new_session_path do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %><br>
    <%= label_tag :password %>
    <%= password_field_tag :password %><br>
    <%= submit_tag "Login!" %>
  <% end %>
  </div>

  <div class="oauth-form">
    <p>Or Login with <%= link_to "Google", "/auth/google_oauth2" %></p>
  </div>
  <% else %>
  <p>You currently are logged in as <%= current_user.username %></p>
<% end %>