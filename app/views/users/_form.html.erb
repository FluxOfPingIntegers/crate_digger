<div class="form">
<%= form_for user do |f| %>
  <%= render partial: "layouts/errors", locals: {record: user} %>
  <%= f.label :username %><br>
  <%= f.text_field :username %><br>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :email %><br>
  <%= f.email_field :email %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit "Submit!" %><br>
  <% end %>
</div>
<% if !logged_in? %>
  <div class="oauth-form">
    <p>Or Login with <%= link_to('Facebook', '/auth/facebook') %>
  </div>
<% end %>